@model QuoteVM

<div class="container col-md-6">
    <div class="card shadow border-0 mt-4 justify-content-center">
       
        <ul class="nav nav-tabs">
            <li class="nav-item col-6 bg-secondary" id="YesOrNo">
                <a class="nav-link active" aria-current="page" href="#">Active</a>
            </li>

            <li class="nav-item col-6 bg-secondary" id="Multiple">
                <a class="nav-link" href="#">Link</a>
            </li>
        </ul>

        <div class="card-body justify-content-center">
            <form method="post">
                <h4> Who said it ?</h4>

                <div class="container justify-content-center">
                    <div class="mb-4">
                        <div class="row form-floating shadow">
                            <textarea rows="4" asp-for="Text" 
                                      class="form-control" readonly style="background-color:deeppink">
                            </textarea>
                        </div>

                        <div class="mt-4">
                            <div class="mt-2 text-center">
                                <p>@Model.Author.Name ?</p>
                            </div>

                            <!-- YesNoButtons -->
                            <div id="YesNoButtons">
                                <div class="d-flex justify-content-between">
                                    <a asp-controller="" asp-action=""
                                       class="btn btn-secondary col-6 col-md-3" style="background-color:limegreen">
                                        Yes
                                    </a>

                                    <a asp-controller="" asp-action=""
                                       class="btn btn-secondary col-6 col-md-3" style="background-color:crimson">
                                        No
                                    </a>
                                    @*<button type="submit" class="btn btn-outline-primary col-6 col-md-3 fw-bold">
                                    Answer
                                    </button>*@
                                </div>
                            </div>
                        </div>
                       
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}