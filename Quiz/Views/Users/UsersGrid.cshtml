@model IEnumerable<CreateUserVM>

@{
    ViewData["Title"] = "Users";
}

<div class="container justify-content-center col-md-8">
    <div class="row mb-2">
        <div class="col-6">
            <h2 class="text-primary">Users</h2>
        </div>

        <div class="col-6 text-end">
            <a  asp-controller="Users" asp-action="CreateUser"
                class="btn btn-outline-primary">
                <i class="bi bi-plus-circle me-2"></i>
                New User
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped" width="100%" id="usersGridTable">
        <thead>
            <tr>
                <th class="col-2 text-center"><h4>Name</h4></th>
                <th class="col-2 text-center"><h4>Email</h4></th>
                <th class="col-2"></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/usersGrid.js"></script>
}
